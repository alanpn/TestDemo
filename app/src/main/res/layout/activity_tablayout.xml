<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单独TabLayout : 使用单独TabItem 来设置标题"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_tablayout_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabSelectedTextColor="#ff33ff"
        app:tabTextColor="#11ff11">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三个"/>

    </android.support.design.widget.TabLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TabLayout与ViewPager配合使用，title必须在代码中实现，使用TabItem 没有作用"
        android:layout_marginTop="10dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_tablayout_tab1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:tabMaxWidth="120dp"
        app:tabMinWidth="120dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ff33ff"
        app:tabTextColor="#11ff11"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_tablayout_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
