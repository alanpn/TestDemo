<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="module"
            type="com.wubin.testdemo.simpleViewModel.WordViewModel" />

        <variable
            name="name"
            type="String" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity_main_test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询全部" />

            <Button
                android:id="@+id/activity_main_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增" />

            <Button
                android:id="@+id/activity_main_test3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除全部" />

            <Button
                android:id="@+id/activity_main_test4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改" />

            <Button
                android:id="@+id/activity_main_test5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除某个" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->module.show()}"
                android:text="viewModel+databinding" />

            <Button
                android:id="@+id/activity_main_test6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单的liveData" />

        </LinearLayout>

    </RelativeLayout>
</layout>